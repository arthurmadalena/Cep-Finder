<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004" author="Arthur Madalena">
        <comment>Adiciona colunas de auditoria para rastreabilidade de alterações</comment>

        <addColumn tableName="cep">
            <column name="usuario_cadastro" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="cep">
            <column name="usuario_alteracao" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <update tableName="cep">
            <column name="usuario_cadastro" value="sistema"/>
            <where>usuario_cadastro IS NULL</where>
        </update>

        <rollback>
            <dropColumn tableName="cep" columnName="usuario_cadastro"/>
            <dropColumn tableName="cep" columnName="usuario_alteracao"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

