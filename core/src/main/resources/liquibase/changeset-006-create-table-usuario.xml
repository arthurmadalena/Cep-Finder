<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006" author="Arthur Madalena">
        <comment>Criação da tabela de usuários para controle de acesso</comment>

        <createSequence sequenceName="seq_usuario" startValue="1" incrementBy="1"/>

        <createTable tableName="usuario">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            
            <column name="nome_completo" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            
            <column name="ativo" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            
            <column name="email_verificado" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            
            <column name="token_verificacao" type="VARCHAR(100)">
                <constraints nullable="true" unique="true"/>
            </column>
            
            <column name="data_expiracao_token" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            
            <column name="dat_hora_cadastro" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            
            <column name="dat_hora_alteracao" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            
            <column name="usuario_cadastro" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            
            <column name="usuario_alteracao" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createTable tableName="usuario_permissao">
            <column name="usuario_id" type="BIGINT">
                <constraints nullable="false" 
                            foreignKeyName="fk_usuario_permissao_usuario"
                            references="usuario(id)"
                            deleteCascade="true"/>
            </column>
            
            <column name="permissao" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="usuario_permissao" 
                      columnNames="usuario_id, permissao" 
                      constraintName="pk_usuario_permissao"/>

        <rollback>
            <dropTable tableName="usuario_permissao" cascadeConstraints="true"/>
            <dropTable tableName="usuario" cascadeConstraints="true"/>
            <dropSequence sequenceName="seq_usuario"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
